@model IEnumerable<BibliotecaBookHub.Models.DTO.ClienteDTO>
@using Microsoft.AspNetCore.Http;

@{
    ViewData["Title"] = "List";
    string login = Context.Session.GetString("_Login");
}

<h1>Cadastro de Clientes</h1>

@if (login != null)
{
    <p>
        <a asp-action="Create">Adicionar Cliente</a>
    </p>
}

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cpf)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fone)
            </th>
            <th> 
                Gerenciamento
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cpf)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fone)
                </td>
                <td>
                    @if (login != null)
                    {
                        <a>
                            @Html.ActionLink("Atualizar", "Edit", new { id = item.Id }) |
                            @Html.ActionLink("Detalhes", "Details", new { id = item.Id }) |
                            @Html.ActionLink("Exclusão", "Delete", new { id = item.Id })
                        </a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
