@model IEnumerable<BibliotecaBookHub.Models.DTO.LivroDTO>
@using Microsoft.AspNetCore.Http;

@{
    ViewData["Title"] = "List";
    string login = Context.Session.GetString("_Login");
}

<h1>Cadastro de Livros</h1>

@if(login != null)
{
    <p>
        <a asp-action="Create">Adicionar Livro</a>
    </p>
}


<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Autor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Editora)
            </th>
            <th>
                Gerenciamento
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Autor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Editora)
                </td>
                <td>
                    @if (login != null)
                    {
                        <a>
                            @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                            @Html.ActionLink("Detalhes", "Details", new { id = item.Id }) |
                            @Html.ActionLink("Exclusão", "Delete", new { id = item.Id })
                        </a>
                    }

                </td>
            </tr>
        }
    </tbody>
</table>
